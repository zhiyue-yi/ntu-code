#VRML V2.0 utf8
#polygon mesh example: a pyramid

Background {skyColor 0 0 1}


Shape {
	appearance Appearance{
		material Material { 
			diffuseColor     1 1 1   #red=1, green=0, blue=0
			specularColor    1 1 1	 #red=1, green=1, blue=1
			transparency 0   # try values between 0 and 1
			shininess 1      # shiny surface, try values between 0 and 1
			}
		}
	geometry IndexedFaceSet {
		coord Coordinate {
                    point [
				1   1   1,  #vertex 0
				-1  1   1,  #vertex 1
                -1  -1  1,  #vertex 2
                1   -1  1,  #vertex 3
                1   1   -1, #vertex 4
                -1  1   -1, #vertex 5
                -1  -1  -1, #vertex 6
                1   -1  -1  #vertex 7
                    ]
                }
		coordIndex [
			    0, 1, 2, 3, -1,
                0, 4, 5, 1, -1,
                5, 4, 7, 6, -1,
                1, 5, 6, 2, -1,
                4, 0, 3, 7 -1,
                3, 2, 6, 7, -1 

			]
			
	}
}
